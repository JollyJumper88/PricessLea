    <PreferenceCategory android:title="General">
        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_display_name"
            android:inputType="textCapWords"
            android:key="name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_display_name" />

        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="birthdatetime"
            android:title="@string/pref_title_birth"/>

        <ListPreference
            android:defaultValue="10"
            android:entries="@array/pref_size_titles"
            android:entryValues="@array/pref_size_values"
            android:key="size_list"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_size" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_textformat"
            android:entryValues="@array/pref_textformat_values"
            android:key="textformat"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_textformat_title"/>

        <ListPreference
            android:defaultValue="@string/pref_mask_default"
            android:entries="@array/pref_mask"
            android:entryValues="@array/pref_mask_values"
            android:key="mask_list"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_mask_title"/>

        <Preference
            android:key="nextmask"
            android:title="@string/pref_next"/>

        <Preference
            android:id="@+id/preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="choosepic"
            android:title="@string/choosepic"/>

        <Preference
            android:key="exit"
            android:title="@string/pref_exit"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/more">
        <Preference
            android:key="dev"
            android:title="@string/about"/>

        <Preference
            android:key="privpol"
            android:title="Privacy Policy"/>

    </PreferenceCategory>
</PreferenceScreen>
