    <PreferenceCategory android:title="General">
        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_default_display_name"
            android:inputType="textCapWords"
            android:key="name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_display_name" />

        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="birthdatetime"
            android:title="@string/pref_title_birth"></Preference>

        <ListPreference
            android:defaultValue="10"
            android:entries="@array/pref_size_titles"
            android:entryValues="@array/pref_size_values"
            android:key="size_list"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_size" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_textformat"
            android:entryValues="@array/pref_textformat_values"
            android:key="textformat"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_textformat" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_timeformat"
            android:entryValues="@array/pref_timeformat_values"
            android:key="timeformat"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_timeformat" />

        <Preference
            android:key="nextmask"
            android:title="@string/pref_next"></Preference>


        <Preference
            android:id="@+id/preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="choosepic"
            android:title="@string/choosepic"></Preference>
        <Preference
            android:key="exit"
            android:title="@string/pref_exit"></Preference>
    </PreferenceCategory>

    <PreferenceCategory android:title="More">
        <Preference
            android:key="dev"
            android:title="About"></Preference>

        <Preference
            android:key="privpol"
            android:title="Privacy Policy"></Preference>

    </PreferenceCategory>
</PreferenceScreen>
